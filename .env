# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pollify

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Blockchain Configuration
BLOCKFROST_API_KEY=your-blockfrost-api-key-here
CARDANO_NETWORK=testnet
BLOCKCHAIN_ENABLED=true

# Token Configuration
PCO_POLICY_ID=your-pco-policy-id-here
GRATIUM_POLICY_ID=your-gratium-policy-id-here

# Module 7 - Moderation System
SYSTEM_WALLET_ADDRESS=addr1_your_system_wallet_address_here

# Optional Module 7 Configuration Overrides
# MOD_BADGE_DEFAULT_RATIO=50
# MOD_REWARDS_COMPLETION_PCO=0.5
# MOD_ELIGIBILITY_MIN_REPUTATION=0
# MOD_ELIGIBILITY_MIN_ACCOUNT_AGE_DAYS=7
# MOD_REWARDS_COMPLETION_REPUTATION=5
# MOD_REWARDS_PENALTY_REPUTATION=-3

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_EXPIRE_TIME=86400000

# Email Configuration (for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM=noreply@pollify.net

# Feature Flags
ENABLE_MODERATION=true
ENABLE_STAKING=true
ENABLE_BLOCKCHAIN_RECORDING=true
ENABLE_TOKEN_TRANSFERS=true

# Development/Debug
DEBUG=false
VERBOSE_ERRORS=false
