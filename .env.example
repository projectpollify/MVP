# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pollify_db"

# JWT Secret (generate a long random string)
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Node Environment
NODE_ENV="development"

# Server Port
PORT=3000

# Blockfrost API (Get from https://blockfrost.io)
BLOCKFROST_PROJECT_ID="your-blockfrost-testnet-project-id"
BLOCKFROST_API_URL="https://cardano-testnet.blockfrost.io/api/v0"

# Redis (optional for MVP - used for rate limiting)
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3001"

# Email Service (optional for MVP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
EMAIL_FROM="noreply@pollify.net"

# Session Settings
SESSION_EXPIRY_TRUE="604800"     # 7 days in seconds
SESSION_EXPIRY_SHADOW="86400"    # 24 hours in seconds  
SESSION_EXPIRY_SOUL="3600"       # 1 hour in seconds
