# .env.example - Pollify MVP Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://pollify_user:pollify_pass@localhost:5432/pollify_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cardano Blockchain Configuration
CARDANO_NETWORK=preprod
BLOCKFROST_API_KEY=your_blockfrost_preprod_api_key

# Token Policy IDs (Update after minting tokens)
PCO_POLICY_ID=test_policy_id_pco_preprod
GRATIUM_POLICY_ID=test_policy_id_gratium_preprod

# Test Token Policy IDs (for faucet)
tPCO_POLICY_ID=test_policy_id_tpco_preprod
tGRATIUM_POLICY_ID=test_policy_id_tgratium_preprod

# Module 3 Settings (from previous modules)
CRAWL_INTERVAL_HOURS=24
ALLOW_EXPLICIT_CONTENT=false
MAX_MEMBERS_PER_GROUP=25
